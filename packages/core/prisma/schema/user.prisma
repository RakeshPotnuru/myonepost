model Profile {
    id                  String             @id @default(uuid()) @db.Uuid
    createdAt           DateTime           @default(now())
    updatedAt           DateTime           @updatedAt
    email               String             @unique /// @zod.string.email()
    username            String             @unique @db.VarChar(30) /// @zod.string.max(30).min(1)
    displayName         String?            @db.VarChar(30) /// @zod.string.max(30).min(1)
    bio                 String?            @db.VarChar(60) /// @zod.string.max(60).min(1)
    avatarUrl           String?
    link                String? /// @zod.string.url()
    profileViews        Int                @default(0)
    nextPostAllowedAt   DateTime?
    bookmarksVisibility BookmarkVisibility @default(PRIVATE)
    isPrivate           Boolean            @default(false)
    bookmarks           Bookmark[]
    comments            Comment[]
    likes               Like[]
    notifications       Notification[]
    post                Post?

    @@map("users")
}

enum BookmarkVisibility {
    PRIVATE
    PUBLIC
}
